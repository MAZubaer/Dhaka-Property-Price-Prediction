{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 30,
                "includeFiles": [
                    "models/**/*",
                    "encoders/**/*",
                    "templates/**/*",
                    "static/**/*"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ]
}